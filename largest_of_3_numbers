import java.util.Scanner;
class One{
public static void main(String args[]){
Scanner sc = new Scanner(System.in);
System.out.println("largest and smallest of 3 numbers");

System.out.println("enter first number: ");
int first = sc.nextInt();
System.out.println("enter second number");
int second = sc.nextInt();
System.out.println("enter third number");
int third = sc.nextInt();

int largest =(first>second)? (first>third? first: third): (second>third? second: third);
System.out.println("largest number among"+first+","+second+"and"+third+"is"+largest);

int smallest =(first<second)? (first<third? first: third): (second<third? second: third);
System.out.println("smallest number among"+first+","+second+"and"+third+"is"+smallest);

}
}
